<div id="filterrific_results">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th><%= Patrimony.human_attribute_name(:name) %></th>                      
        <th><%= Patrimony.human_attribute_name(:date_of_acquisition) %></th>         
        <th><%= Patrimony.human_attribute_name(:active) %></th>                      
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @patrimonies) do |patrimony| %>
        <td><%= patrimony.name %></td>                                    
        <td><%=l patrimony.date_of_acquisition if patrimony.date_of_acquisition %></td>                                            
        <td><span class="label label-<%= patrimony.active ? 'success' : 'danger'%>"><%= patrimony.active ? "Sim" : "NÃ£o" %></span></td>        
      <% end %>
    </tbody>
  </table>

  <%= will_paginate @patrimonies, renderer: BootstrapPagination::Rails %>
</div>