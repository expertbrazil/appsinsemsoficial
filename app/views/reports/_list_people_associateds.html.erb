<div id="filterrific_results">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Mat.</th>
        <th>Reg.</th>
        <th class="name"><%= PeopleAssociated.human_attribute_name(:name) %></th>              
        <th><%= PeopleAssociated.human_attribute_name(:cpf) %></th>              
        <th><%= PeopleAssociated.human_attribute_name(:affiliate_date) %></th>              
        <th><%= PeopleAssociated.human_attribute_name(:address) %></th>              
        <th><%= PeopleAssociated.human_attribute_name(:workplace) %></th>              
        <th><%= PeopleAssociated.human_attribute_name(:office_id) %></th>                                    
        <th><%= PeopleAssociated.human_attribute_name(:occupation_id) %></th>                                    
        <th><%= PeopleAssociated.human_attribute_name(:phone) %></th>                                    
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @people_associateds) do |people_associated| %>
      <td><%= people_associated.hollering_registration %></td>
      <td><%= people_associated.number_registration %></td>
      <td class="name"><%= people_associated.name %></td>                            
      <td><%= people_associated.cpf %></td>                            
      <td><%=l people_associated.affiliate_date if !people_associated.affiliate_date.blank? %></td>                            
      <td><%= people_associated.full_address.split(",").reject { |c| c.blank? }.size > 0 ? people_associated.full_address : "" %></td>                            
      <td><%= people_associated.workplace.name if people_associated.workplace.present? %></td>                            
      <td><%= people_associated.office.name if people_associated.office %></td>                            
      <td><%= people_associated.occupation.name if people_associated.occupation %></td>                            
      <td><%= people_associated.cell_phone1 %></td>                            
      <% end %>
    </tbody>
  </table>

  <% will_paginate @people_associateds, renderer: BootstrapPagination::Rails if false %>
  <br>
  <p><b>Total:</b><%= @people_associateds.count %></p>
</div>