<div id="filterrific_results">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th><%= Company.human_attribute_name(:name) %></th>              
        <th><%= Company.human_attribute_name(:segment) %></th> 
        <th><%= Company.human_attribute_name(:phone) %></th>              
        <th><%= Company.human_attribute_name(:benefit) %></th>                   
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @business) do |busines| %>
      <td><%= busines.name %></td>                                    
      <td><%= busines.segment ? busines.segment.name : "Nada informado" %></td>                            
      <td><%= busines.phone %></td>                                    
      <td><%= busines.benefit %></td>                                    

      <% end %>
    </tbody>
  </table>

  <%= will_paginate @business, renderer: BootstrapPagination::Rails %>
</div>