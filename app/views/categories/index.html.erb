<div class="card">

  <div class="card no-print">
  <div class="card-header ch-alt m-b-20">   
    <i class="zmdi zmdi-filter-list"></i> Filtros
  </div>  
  
  <div class="card-body card-padding "> 
    <form id="search">
          <div class='row'>
            <div class="col-sm-9">
              <div class="form-group fg-line">
                <label>Por nome:</label>
                <input class="form-control" id="box" type="search">
              </div>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-sm-12">
              <div class="form-group fg-line">  
                <button type="submit" class="btn btn-primary btn-outline-primary">Filtrar</button>
                <%= link_to('Limpar Filtros', 'javascript:;', class: "btn btn-default btn-outline-default", id: 'clear')%>
              </div>
            </div>
          </div>
        </form>
  </div>
</div>


  <div class="card-header ch-alt m-b-20">                                    
    <%= link_to new_category_path, class: 'btn bgm-green btn-float waves-effect' do %>
    <i class="zmdi zmdi-plus"></i>
    <% end %>

    <h2><i class="zmdi zmdi-label"></i> <%= "Plano de Contas" %></h2>
  </div>

    <div class="card-body card-padding">   

      <ul class="tab-nav" role="tablist">
        <% if false %>
        <li class="active">
            <a href="#table_view" aria-controls="table_view" role="tab" data-toggle="tab">Lista</a>
        </li>
        <% end %>
        <li class="active">
            <a href="#three_view" aria-controls="three_view" role="tab" data-toggle="tab">Receitas</a>
        </li>

        <li class="">
            <a href="#three_view_despesas" aria-controls="three_view_despesas" role="tab" data-toggle="tab">Despesas</a>
        </li>
      </ul>

      <div class="tab-content p-t-0 p-b-0">
        <% if false %>
        <div role="tabpanel" class="tab-pane active" id="table_view">
            <%= render "categories/table_view" %>
        </div>    
        <% end %>

        <div role="tabpanel" class="tab-pane active" id="three_view">
          <%= render "categories/three_view" %>
        </div> 

        <div role="tabpanel" class="tab-pane" id="three_view_despesas">
          <%= render "categories/three_view_despesas" %>
        </div>
      </div>                   
    </div>
</div>



