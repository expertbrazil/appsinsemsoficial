<%= simple_form_for(@supplier, html: { class: "form-horizontal", role: "form" }, remote: true) do |f| %>
<%= f.error_notification %>
<div id='supplier_error'></div>
<div class="card-body">
  <div class="row">          
    <div class="col-sm-12"> 
      <div class="form-group fg-float">
        <div class="fg-line">              
          <%= f.input :name, input_html: {class: "input-sm form-control fg-input"}, label: false %> 
          <%= f.label :name, class: "fg-label" %>  
        </div>
      </div>
    </div>
    
    <div class="col-sm-12"> 
      <div class="form-group fg-float">
        <div class="fg-line">              
          <%= f.input :phone, input_html: {class: "input-sm form-control fg-input mask-phone", "data-mask": "(00) 0000-0000"}, label: false %> 
          <%= f.label :phone, class: "fg-label" %>  
        </div>
      </div>
    </div>
    
    <div class="col-sm-12"> 
      <div class="form-group fg-float">
        <div class="fg-line">              
          <%= f.input :email, input_html: {class: "input-sm form-control fg-input"}, label: false %> 
          <%= f.label :email, class: "fg-label" %>  
        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal-footer">
  <%= f.button :submit, onclick: "showPreLoader()", class: "btn bgm-green waves-effect" %>     
  <button type="button" class="btn btn-link" data-dismiss="modal">Cancelar</button>
</div>  
<% end %>