<div class="card">
  <div class="card-header ch-alt m-b-20">                                    
    <%= link_to new_supplier_path, class: 'btn bgm-green btn-float waves-effect' do %>
    <i class="zmdi zmdi-plus"></i>
    <% end %>

    <h2><i class="zmdi zmdi-assignment"></i> <%= "Fornecedores" %></h2>
  </div>

  <div class="card-body card-padding">       
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Situação</th>
            <th>Telefone</th>
            <th>E-mail</th>
            <th></th>       
          </tr>
        </thead>

        <tbody>
          <%= content_tag_for(:tr, @suppliers) do |supplier| %>
          <td><%= supplier.name %></td>           
          <td><span class="label label-<%= supplier.status ? "success" : "default" %>"><%= supplier.status ? "Ativo" : "Inativo" %></span></td>
          <td><%= supplier.phone %></td>           
          <td><%= supplier.email %></td>           
          <td style="width: 200px;">
            <%= link_to supplier, class: "btn bgm-orange waves-effect" do %>
              <%= content_tag(:i, nil, class: "zmdi zmdi-eye") %>
            <% end %>
            
            <%= link_to edit_supplier_path(supplier), class: "btn btn-info waves-effect" do %>
              <%= content_tag(:i, nil, class: "zmdi zmdi-edit") %>
            <% end %>

            <%= link_to supplier, method: :delete, data: { confirm:  I18n.t('default_messages.confirm')  } , class: "btn btn-danger waves-effect" do %>
              <%= content_tag(:i, nil, class: "zmdi zmdi-delete") %>
            <% end %>
            <% end %>
          </tbody>
        </table>
      </div>    

      <%= will_paginate @suppliers, renderer: BootstrapPagination::Rails %>                      
    </div>
</div>