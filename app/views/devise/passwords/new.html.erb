<!-- Forgot Password -->
<div class="lc-block toggled" id="l-forget-password">
	<%= render "devise/msgs" %>
	<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
	<%= f.error_notification %>
	<div class="lcb-form">
		<p class="text-left">Para recuperar sua senha digite o email cadastrado.</p>

		<div class="input-group m-b-20">
			<span class="input-group-addon"><i class="zmdi zmdi-email"></i></span>
			<div class="fg-line">
				<%= f.input :email, required: true, input_html: { class: "form-control" }, placeholder: "Email",  label: false %>
			</div>
		</div>

		<%= button_tag class: "btn btn-login btn-success btn-float", data: { disable_with: "<i class='zmdi zmdi-rotate-right zmdi-hc-spin'></i>"}  do %>
  			<i class="zmdi zmdi-check"></i>
		<% end %>
	</div>
	<% end %>

	<div class="lcb-navigation">
		<%= render "devise/shared/links" %>
	</div>
</div>
