	<thead>
		<tr>
			<th style="width: 100px; text-align:left;"><%= Dependent.human_attribute_name(:name) %></th>
			<th style="width: 100px; text-align:left;"><%= Dependent.human_attribute_name(:birthdate) %></th>
			<th style="width: 100px; text-align:left;"><%= Dependent.human_attribute_name(:degree_of_kinship) %></th>
		</tr>
	</thead>
	<tbody>
		<% @p.dependents.each do |dependent| %>
		<tr>
			<td><%= dependent.name %></td>
			<td><%= I18n.l dependent.birthdate %></td>
			<td><%= dependent.degree_of_kinship_name %></td>
		</tr>
		<% end %> 
	</tbody>
</table>
<% end %>