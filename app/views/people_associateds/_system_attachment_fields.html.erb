<div class="card-body card-padding nested-fields">
	
	<div class="card p-10">
		<div class="card-header ch-alt m-t-0">
	    	<h2><i class="zmdi zmdi-file"></i> Arquivo - <%= link_to_remove_association "Remover", f, class: 'btn bgm-red waves-effect' %></h2>
		</div>

		<div class="custom-dependent-add-form row">	
			<div class="col-sm-3 content-dep">
				<div class="form-group fg-line">     
					<%= f.label "Nome", class: "fg-label" %>                   
					<%= f.input :name, input_html: {class: "input-sm form-control fg-input"}, label: false  %>
				</div>
			</div>

			<div class="col-sm-3 content-dep">
				<div class="form-group fg-line">     
					<%= f.label "Arquivo", class: "fg-label" %>                   
					<%= f.input :archive, as: :file, input_html: {class: "input-sm form-control fg-input"}, label: false  %>
				</div>
			</div>
			
			<div class="col-sm-3 content-dep">
				<% if f.object.archive.present? %>                                    
                    <div id="preview_photo" class="fg-line">
                       <embed  
                       	src="<%= f.object.archive.url %>"
                       	width="150"
                       	height="150" style="border: 3px solid #009688;border-radius: 30px;">                       
                    </div>   

                    	<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#arquivo<%=f.object.id%>" style="margin-left: 20px;">

  							<span class="fa fa-search-plus"></span>
  							Visualizar
						</button>
        

                    	<div class="modal fade" id="arquivo<%=f.object.id%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">

						  <div class="modal-dialog" role="document">
						    <div class="modal-content">
						      <div class="modal-header">
						        <h5 class="modal-title"><%= f.object.name.upcase %></h5>
						        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
						          <span aria-hidden="true">&times;</span>
						        </button>
						      </div>
						      <div class="modal-body">
						        <embed  
			                       	src="<%= f.object.archive.url %>"
			                       	width="100%"
			                       	height="100%">      
						      </div>
						      <div class="modal-footer">
						        <button type="button" class="btn btn-secondary" data-dismiss="modal">Sair</button>
						      </div>
						    </div>
						  </div>
						
                <% end %>
			</div>
		</div>
	</div>
	</div>
</div>