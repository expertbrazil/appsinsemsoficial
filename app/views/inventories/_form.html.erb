<div class="card">
  
  <%= simple_form_for(@inventory, html: { class: "", role: "form" }) do |f| %>
  <%= f.error_notification %>

  <div class="card-header">
    <h2><i class="zmdi zmdi-library"></i> Dados <%= Inventory.model_name.human %></h2>
  </div>

  <div class="card-body card-padding">
    <div class="row">
      <div class="col-sm-12">
        <div class="col-sm-12">    
          <div class="form-group fg-line ">
            <%= f.label :description, class: "fg-label" %>
            <%= f.input :description, input_html: {class: "input-sm form-control fg-input"}, label: false %>
          </div>
        </div>
      </div>
    </div>
    
    <div class="row">
      <div class="col-sm-12">
        <div class="col-sm-4">    
          <div class="form-group fg-line ">
            <%= f.label :unit, class: "fg-label" %>
            <%= f.input :unit, collection: Inventory::UNIT, input_html: {class: "selectpicker"}, label: false %>
          </div>
        </div>

        <div class="col-sm-4">    
          <div class="form-group fg-line ">
            <%= f.label :minimum_balance, class: "fg-label" %>
            <%= f.input :minimum_balance, input_html: {class: "input-sm form-control fg-input"}, label: false %>
          </div>
        </div>

        <div class="col-sm-4">    
          <div class="form-group fg-line ">
            <%= f.label :opening_balance, class: "fg-label" %>
            <%= f.input :opening_balance, input_html: {class: "input-sm form-control fg-input"}, label: false %>
          </div>
        </div>
      </div>          
    </div>          


    <div class="card-body card-padding">
      <%= submit_tag 'Criar e adicionar', class: "btn bgm-teal waves-effect", name: 'create_and_add' if !edit_mode? %>
      <%= f.button :submit, class: "btn bgm-green waves-effect" %>
      <%= link_to "Cancelar", inventories_path, class: "btn bgm-red waves-effect" %>
    </div>  
    <% end %>    
  </div>

  <script type="text/javascript">
    $(document).ready(function(){
      loadSelectPicker();
    })
  </script>