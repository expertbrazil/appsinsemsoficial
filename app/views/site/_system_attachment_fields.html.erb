<div class="card-body card-padding nested-fields">
	
	<div class="card p-10">
		<div class="card-header ch-alt m-t-0">
	    	<h2><i class="zmdi zmdi-file"></i> Arquivo - <%= link_to_remove_association "Remover", f, class: 'btn bgm-red waves-effect' %></h2>
		</div>

		<div class="custom-dependent-add-form row">	
			<div class="col-sm-3 content-dep">
				<div class="form-group fg-line">     
					<%= f.label "Descreva o documento", class: "fg-label" %>                   
					<%= f.input :name, input_html: {class: "input-sm form-control fg-input", placeholder: "Ex: CNH"}, label: false  %>
				</div>
			</div>

			<div class="col-sm-3 content-dep">
				<div class="form-group fg-line">     
					<%= f.label "Arquivo", class: "fg-label" %>                   
					<%= f.input :archive, as: :file, input_html: {class: "input-sm form-control fg-input"}, label: false  %>
				</div>
			</div>
			
			<div class="col-sm-3 content-dep">
				<% if f.object.archive.present? %>                                    
                    <div id="preview_photo" class="fg-line">
                       <embed  
                       	src="<%= f.object.archive.url %>"
                       	width="150"
                       	height="150" style="border: 3px solid #009688;border-radius: 30px;"> 
                    </div>                         
                <% end %>
			</div>
	</div>
</div>