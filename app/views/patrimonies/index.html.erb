<div class="card">
  <div class="card-header ch-alt m-b-20">                                    
    <%= link_to new_patrimony_path, class: 'btn bgm-green btn-float waves-effect' do %>
    <i class="zmdi zmdi-plus"></i>
    <% end %>

    <h2><i class="zmdi zmdi-assignment"></i> <%= Patrimony.model_name.human.pluralize %></h2>
  </div>

  <div class="card-body card-padding">       
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>Numero</th>
            <th>Nome</th>
            <th>Ativo</th>
            <th></th>       
          </tr>
        </thead>

        <tbody>
          <%= content_tag_for(:tr, @patrimonies) do |patrimony| %>
          <td><%= patrimony.patrimony_number %></td>
          <td><%= patrimony.name %></td>           
          <td><label class='label label-<%= patrimony.active ? 'success' : 'danger' %>'><%= patrimony.active ? 'SIM' : 'NÃ‚O' %></label></td>           
          <td style="width: 200px;">
            <% link_to patrimony, class: "btn bgm-orange waves-effect" do %>
              <%= content_tag(:i, nil, class: "zmdi zmdi-eye") %>
            <% end %>
            
            <%= link_to edit_patrimony_path(patrimony), class: "btn btn-info waves-effect" do %>
              <%= content_tag(:i, nil, class: "zmdi zmdi-edit") %>
            <% end %>

            <%= link_to patrimony, method: :delete, data: { confirm:  I18n.t('default_messages.confirm')  } , class: "btn btn-danger waves-effect" do %>
              <%= content_tag(:i, nil, class: "zmdi zmdi-delete") %>
            <% end %>
            <% end %>
          </tbody>
        </table>
      </div>    

      <%= will_paginate @patrimonies, renderer: BootstrapPagination::Rails %>                      
    </div>
</div>