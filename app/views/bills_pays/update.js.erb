<% if @saved %>
	<% if @bills_pay.payroll_discount %>
		$.ajax({
          url: "<%=@url%>",
          type: 'get',
          dataType: 'script',
          beforeSend: function(xhr) {                     
            xhr.setRequestHeader('X-CSRF-Token', $('meta[name="csrf-token"]').attr('content'));
            showPreLoader();
        },
        success: function() { 
            hiddenPreLoader();            
        }
    });
	<% else %>
    	window.location.href = "<%= bills_pays_url %>"
    <% end %>

<% else %>	
	$("#bills_pay_error").html("<%= escape_javascript errors(@bills_pay) %>")
<% end %>	