<div class="card">
<div class="card-header ch-alt m-b-20">                                    
  <%= link_to new_financial_account_path, class: 'btn bgm-green btn-float waves-effect' do %>
  <i class="zmdi zmdi-plus"></i>
  <% end %>

  <h2><i class="zmdi zmdi-library"></i> <%= FinancialAccount.model_name.human.pluralize %></h2>
</div>

<div class="card-body card-padding">       
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Status</th>
          <th></th>       
        </tr>
      </thead>

      <tbody>
        <%= content_tag_for(:tr, @financial_accounts) do |financial_account| %>
        <td><%= financial_account.name %></td>           
        <td><%= best_in_place financial_account, :status, :as => :select, :collection => [[true, 'Ativo'], [false, 'Inativo']] %></td>           
        <td style="width: 200px;">
          <%= link_to financial_account, class: "btn bgm-orange waves-effect" do %>
            <%= content_tag(:i, nil, class: "zmdi zmdi-eye") %>
          <% end %>         

          <%= link_to edit_financial_account_path(financial_account), class: "btn btn-info waves-effect" do %>
            <%= content_tag(:i, nil, class: "zmdi zmdi-edit") %>
          <% end %>

          <%= link_to financial_account, method: :delete, data: { confirm: I18n.t('default_messages.confirm')  } , class: "btn btn-danger waves-effect" do %>
            <%= content_tag(:i, nil, class: "zmdi zmdi-delete") %>
          <% end %>
          <% end %>
        </tbody>
      </table>
    </div>    

    <%= will_paginate @financial_accounts, renderer: BootstrapPagination::Rails %>                          
  </div>
</div>
