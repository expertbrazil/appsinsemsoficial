<%= simple_form_for(@subcategory, html: { class: "form-horizontal", role: "form" }, remote: true) do |f| %>
<%= f.error_notification %>
<div id='subcategory_error'></div>
<div class="card-body">
  <div class="row">

    <div class="col-sm-9">    
      <div class="fg-line ">
        <%= f.label :name, class: "fg-label" %>
        <%= f.input :name, input_html: {class: "input-sm form-control fg-input"}, label: false %>
      </div>
    </div>

    <div class="col-sm-3">      
      <div class="fg-line">              
        <%= f.label :type_subcategory, class: "fg-label" %>  
        <%= f.input :type_subcategory, collection: Subcategory::TYPES, input_html: {class: "selectpicker"}, label: false %>               
      </div>      
    </div>
  </div>
</div>

<div class="modal-footer">
  <%= f.button :submit, onclick: "showPreLoader()", class: "btn bgm-green waves-effect" %>     
  <button type="button" class="btn btn-link close-modal-subcategory" >Cancelar</button>
</div>  
<% end %>


<script type="text/javascript">
    $(document).ready(function(){
       loadSelectPicker();

        $('.close-modal-subcategory').on("click", function(e){
          $('#modal_new_subcategory').modal('hide');
        });
    });
</script>